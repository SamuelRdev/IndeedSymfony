{% extends 'base.html.twig' %}

{% block title %}Indeed mais en mieux 2021{% endblock %}

{% block body %}

{% include "components/_navbar.html.twig" %};



<div class="container mb-5">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="offre d-flex flex-column align-items-center justify-content-center"> 
                <img src="https://via.placeholder.com/250/250" alt=""> 
                <span class='createdAtSpan mt-2' style='font-size:10px; font-style: italic;'>Offre publiée le: {{ offer.createdAt | date("d/m/Y") }}</span>  
                <h1 class="card-title fs-5 text-center mt-3">{{ offer.title | upper}}</h1>
                <hr style='width:300px'>
                <ul>
                    <li class='mt-2'>{{ offer.content }}</li>   
                    <li class='mt-2'>{{ offer.address }}</li> 
                    <li class='mt-2'>{{ offer.city }}</li> 
                    <li class='mt-2'>{{ offer.contract }}</li> 
                    <li class='mt-2'>{{ offer.contractType }}</li>   
                    <li class='mt-2'>Jusqu'au {{ offer.endedAT | date("d/m/Y") }}</li>     
                </ul>  
                {% if offer.updatedAt %}
                    <p class='updatedAtSpan mt-2 align-self-end text-decoration-underline' style='font-size:10px; font-style: italic;'>Modifié le: {{ offer.updatedAt | date("d/m/Y") }}</p>  
                {% endif %}
                <div class="block-button d-flex flex-row">
                    <a href="{{ path("offers_edit.create", {id: offer.id}) }}" class='btn btn-warning'>Modifier l'offre</a>
                    <a href="{{ path("offers.delete", {id: offer.id}) }}" class='btn btn-danger ms-5'>Supprimer l'offre</a>
                </div>
            </div>
        </div>
    </div>     
</div>
{% endblock %}