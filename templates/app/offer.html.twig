{% extends 'base.html.twig' %}

{% block title %}Indeed mais en mieux 2021{% endblock %}

{% block body %}

{% include "components/_navbar.html.twig" %};

<div class="container">
    <div class="row mt-5">
        
            <div class="col-md-3">
                <div class="card"> 
                    <img src="https://via.placeholder.com/150" alt="" class="card-img-top">
                    <div class="card-body">
                        <a href="/offer/{{offer.id}}">
                            <h2 class="card-title fs-5 text-center">{{ offer.title | upper}}</h2>
                            <ul>
                                <li>{{ offer.city }}</li> 
                             
                            </ul>
                        </a>
                    </div>
                </div>
            </div>
       
    </div>
</div>

{% endblock %}