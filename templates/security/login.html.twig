{% extends 'base.html.twig' %}

{% block body %}
    <h1 class='text-center'>Se connecter</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-4">
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-control mt-5">
                        <div class="form-group text-center">
                            <input placeholder="Nom d'utilisateur" type="text" class='form-control mt-3' required name='_username'>
                            <input placeholder="Mot de passe" type="password" class='form-control mt-3' required name='_password'>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success mt-3">Se connecter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}